{
  "title": "JSON schema for Blue Yonder Teams Secret Groups",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "$ref": "#/definitions/teamSecretGroup"
  },
  "definitions": {
    "teamSecretGroup": {
      "type": "object",
      "required": [
        "teamName",
        "fileName",
        "namePatterns"
      ],
      "properties": {
        "teamName": {
          "type": "string"
        },
        "fileName": {
          "type": "string"
        },
        "namePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
